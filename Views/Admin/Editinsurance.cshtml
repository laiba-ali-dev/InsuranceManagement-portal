@model OnlineInsurance.Models.Insurance
@{
    ViewData["Title"] = "Editinsurance";
}

@* <h1>Editinsurance</h1> *@
<div class="main-panel">
    <div class="content">
        <div class="container-mt-5">

            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <!-- Form Column -->
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Edit Insurance</div>
                        </div>
                        <hr />
                      

                        <form asp-action="Editinsurance" >
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group mb-2">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="Premium" class="control-label"></label>
                                <input asp-for="Premium" class="form-control" />
                                <span asp-validation-for="Premium" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="Duration" class="control-label"></label>
                                <input asp-for="Duration" class="form-control" type="text" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="ClaimLimit" class="control-label"></label>
                                <input asp-for="ClaimLimit" class="form-control" />
                                <span asp-validation-for="ClaimLimit" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="Type" class="control-label"></label>
                                <select asp-for="Type" class="form-control">
                                    <option value=""></option>
                                    <option value="Home">Home</option>
                                    <option value="Life">Life</option>
                                    <option value="Health">Health</option>
                                    <option value="Motor">Motor</option>
                                    
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                           

                            <div class="form-group text-center">
                                <input type="submit" value="update" class="btn btn-primary w-50" />
                            </div>
                        </form>
                    </div>

                    <div class="col-sm-3"></div> <!-- Empty column for spacing -->
                </div>
            </div>
        </div>
    </div>
</div>

